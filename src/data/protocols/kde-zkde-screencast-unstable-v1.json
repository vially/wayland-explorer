              "protocol": "wayland"
            },
            {
              "type": "arg",
              "name": "pointer",
              "argType": "uint",
              "summary": "Requested pointer mode"
            }
          ]
        },
        {
          "type": "request",
          "name": "stream_window",
          "description": {
            "type": "description",
            "summary": "requests a feed from a given source"
